  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'compass-rails'
  gem 'jquery-rails'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'pry'
  gem 'cane'
  gem 'rails_best_practices'
end
