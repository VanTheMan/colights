<%= render 'layouts/slide' %>

<div class="container-inner">
  <div id="slides_four">
    <h3><%= link_to "Top 25 Trailers", "#", class: "link_header" %></h3>
    <div class="slides_container">
      <%= render 'layouts/slidetop', videos: @top_videos %>
    </div>
    <a href="#" class="prev"></a>
    <a href="#" class="next"></a>
  </div>

  <div id="slides_five">
    <h3><%= link_to "Recently Added", "#", class: "link_header" %></h3>
    <div class="slides_container">
      <%= render 'layouts/slidemini', videos: @recent_videos %>
    </div>
    <a href="#" class="prev"></a>
    <a href="#" class="next"></a>
  </div>
</div>

<div style="display:none">
  <div id="inline">
    <%= form_tag({:action => :upload, controller: "videos"}, :multipart => true, class: "form-horizontal") do %>
      <fieldset>
        <legend>Upload Video</legend>
        <div class="control-group">
          <%= label_tag(:title, "Title:", class: "control-label") %>
          <div class="controls">
            <%= text_field_tag(:title) %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag(:description, "Description:", class: "control-label") %>
          <div class="controls">
            <%= text_field_tag(:description) %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= file_field_tag 'video' %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= submit_tag "Upload",class: "btn btn-primary" %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>