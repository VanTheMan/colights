<div class="video">
  <div class="row">
    <div class="span4">
      <a href="<%= video_path(video) %>" class="thumbnail">
        <img src="<%= video.thumbnails.hq_img.first.thumbnail.url %>">
        <span><%= video.movie.title %></span>
      </a>
    </div>
    <div class="span4">
      <p><%= video.title %></p>
      <p><%= time_ago_in_words(video.uploaded_at) %> ago </p>
    </div>
  </div>
</div>
